<App>
	<DirectNavigation />
	<PageControl>
	<Page Name="mainPage">
		<DockPanel>
			<StatusBarBackground Dock="Top" />
			<StatusBarBackground Dock="Bottom" />

			<Image File="Assets/frontpage.jpeg" StretchMode="UniformToFill" Layer="Background"/>

			<StackPanel Alignment="BottomCenter" Padding="0, 0, 0, 70">
				<Button Text="Create new interval" Padding="70, 0, 70, 0" Margin="10">
					<Clicked>
						<NavigateTo Target="newInterval" />
					</Clicked>
				</Button>
				<Button Text="My saved intervals" Padding="70, 0, 70, 0" Margin="10">
					<Clicked>
						<NavigateTo Target="mySavedIntervalls" />
					</Clicked>
				</Button>
				<Button Text="Standard intervals" Padding="70, 0, 70, 0" Margin="10">
					<Clicked>
						<NavigateTo Target="standardIntervalls" />
					</Clicked>
				</Button>
			</StackPanel>
		</DockPanel>
	</Page>

	<Page Name="newInterval">
		<JavaScript File="js/Storage.js" />
		<StatusBarBackground Dock="Top" />
		<StatusBarBackground Dock="Bottom" />
		<StackPanel Margin="20,70,20,0">
			<TextInput  Value="{intervalName}" TextAlignment="Center" PlaceholderText="Name"/>
			<StackPanel Orientation="Horizontal" Alignment="Center">
				<Text Value="Interval time" Alignment="Center" Margin="0,0,30,0"/>
				<TextInput Value="{intervalMins}" PlaceholderText="MM"/>
				<TextInput Value="{intervalSecs}" PlaceholderText="SS"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Alignment="Center">
				<Text Value="Pause time" Alignment="Center" Margin="0,0,30,0"/>
				<TextInput Value="{intervalPauseMins}" PlaceholderText="MM"/>
				<TextInput Value="{intervalPauseSecs}" PlaceholderText="SS"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" Alignment="Center">
				<Text Value="Number of repeats" Alignment="Center" Margin="0,0,30,0"/>
				<TextInput Value="{intervalReps}" PlaceholderText="Nr"/>
			</StackPanel>
			
			<Button Clicked="{addInterval}" HitTestMode="LocalBoundsAndChildren" Alignment="HorizontalCenter" Text="Add interval" Padding="30, 5, 30, 5" Margin="0,0,0,50" />

			<Button Clicked="{writeIntervalList}" HitTestMode="LocalBoundsAndChildren" Alignment="HorizontalCenter" Text="Save intervals" Padding="30, 5, 30, 5" Margin="0,0,0,50" />

			<Button Clicked="{loadIntervalList}" HitTestMode="LocalBoundsAndChildren" Alignment="HorizontalCenter" Text="Load intervals" Padding="30, 5, 30, 5" Margin="0,0,0,50" />
			<TextInput Value="{intervalContent}" Alignment="Center" PlaceholderText="Placeholder"/>
		</StackPanel>
		<Button Alignment="BottomCenter" Text="Back" Padding="30, 5, 30, 5" Margin="0,0,0,50">
			<Clicked>
				<NavigateTo Target="mainPage" />
			</Clicked>
		</Button>
	</Page>

	<Page Name="mySavedIntervalls">
		<DockPanel>
			<StackPanel Dock="Top" Background="#545454" Height="50">
				<Panel Dock="Top">
					<Text Value="Lagrede intervaller" Alignment="Center"
						  FontSize="20" TextColor="#FFF"/>

					<Panel ux:Name="backButton" Alignment="Left" Width="90" Opacity="1" Padding="20,0,0,0" Height="50" HitTestMode="LocalBounds" >
						<WhilePressed>
							<Scale Factor=".9" Duration=".1" />
						</WhilePressed>
						<DockPanel>
							<Image File="Assets/arrow-left-white.png" Height="20" Color="#fff" Dock="Left" />
						</DockPanel>
						<Clicked>
							<NavigateTo Target="mainPage" />
						</Clicked>
					</Panel>
				</Panel>
			</StackPanel>
			<Text ux:Class="ButtonText" FontSize="20" />
			<Image File="Assets/general_background.jpg" StretchMode="UniformToFill" Layer="Background"/>
			<ScrollView>
				<StackPanel Margin="0,10,0,0">
					<JavaScript File="MainView.js"/>
					
					<Each Items="{buttons}">
						<Rectangle Alignment="Center" Margin="10,10,10,10" Width="300" Height="43" CornerRadius="10">
						<ImageFill File="Assets/button_background_2.jpg" StretchMode="UniformToFill"/>
						
						<ButtonText Value="{text}" Alignment="Center"/>
						
						<WhilePressed>
							<Scale Factor=".95" Duration=".1" />
						</WhilePressed>
						<Clicked>
							<NavigateTo Target="intervall" />
						</Clicked>
					</Rectangle>
					</Each>

					<!--<Rectangle Alignment="Center" Margin="20,20,20,20" Width="300" Height="43" CornerRadius="10">
						<ImageFill File="Assets/button_background_2.jpg" StretchMode="UniformToFill"/>
						<Text Value="Intervall 1" Alignment="Center"/>
						<WhilePressed>
							<Scale Factor=".95" Duration=".1" />
						</WhilePressed>
						<Clicked>
							<NavigateTo Target="intervall" />
						</Clicked>
					</Rectangle>
					<Button Text="Intervall 2">
						<Clicked>
							<NavigateTo Target="intervall" />
						</Clicked>
					</Button>-->

				</StackPanel>
			</ScrollView>
		</DockPanel>
	</Page>

	<Page Name="standardIntervalls">
		<StackPanel>
			<Button Text="4x4">
				<Clicked>
					<NavigateTo Target="intervall" />
				</Clicked>
			</Button>
			<Button Text="6X4">
				<Clicked>
					<NavigateTo Target="intervall" />
				</Clicked>
			</Button>
		</StackPanel>
	
		<Button Alignment="BottomCenter" Text="Back" Padding="30, 5, 30, 5" Margin="0,0,0,50">
			<Clicked>
				<NavigateTo Target="mainPage" />
			</Clicked>
		</Button>
	</Page>

	<Page Name="intervall">
		<StackPanel Margin="20,70,20,0">
			<Text TextAlignment="Center" Value="Clock: 10:00"/>
			<StackPanel Orientation="Horizontal" Alignment="Center">
				<Text Value="1." Alignment="Center" Margin="0,0,30,0"/>
				<Text Value="Her skal det status bar paa tiden" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" Alignment="Center">
				<Text Value="2." Alignment="Center" Margin="0,0,30,0"/>
				<Text Value="Her skal det status bar paa tiden" />
			</StackPanel>
			
		</StackPanel>
	
		<Button Alignment="BottomCenter" Text="Back" Padding="30, 5, 30, 5" Margin="0,0,0,50">
			<Clicked>
				<NavigateTo Target="mainPage" />
			</Clicked>
		</Button>
	</Page>
	</PageControl>

</App>
